<%- include ../parts/header.ejs %>
<%- include ../parts/navbar.ejs %>
<%- include ../parts/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tambah Rekam Medis <%= pasien.nama %></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/rekammedis/<%= pasien._id %>">Rekam Medis</a></li>
                <li class="breadcrumb-item active">Tambah Rekam Medis</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body">
                <form class="form-horizontal" action="/rekammedis/create/<%= pasien._id %>" method="post" >
                    <div class="card card-secondary">
                        <div class="card-header">
                          <h3 class="card-title">Data Identitas Pasien</h3>
                        </div>
                        <div class="card-body">
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">NIK</label>
                            <div class="col-sm-10">
                            <input type="number" class="form-control" value="<%= pasien.nik %>" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword3" class="col-sm-2 col-form-label">Nama</label>
                            <div class="col-sm-10">
                            <input type="text" class="form-control" value="<%= pasien.nama %>" disabled>
                            </div>
                        </div>
                        </div>
                        <!-- /.card-body --> 
                    </div>
                    <div class="card card-secondary">
                        <div class="card-header">
                          <h3 class="card-title">Rekam Medis</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Rumah Sakit</label>
                                <div class="col-sm-10">
                                <select class="form-control select2bs4" style="width: 100%;" name="rumahsakit">
                                    <option selected="selected" disabled>Pilih rumah sakit</option>
                                    <% rumahsakit.forEach(rumahsakit =>{ %>
                                        <option value="<%= rumahsakit._id %>"><%= rumahsakit.nama %></option>
                                    <% }) %>
                                </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Tanggal</label>
                                <div class="col-sm-10">
                                <input type="date" class="form-control" name="tanggal">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Tanggal Keluar</label>
                                <div class="col-sm-10">
                                <input type="date" class="form-control" name="tanggalkeluar">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Diagnosis</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Diagnosis" name="diagnosis"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Hasil Pemeriksaan Fisik</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Hasil Pemeriksaan Fisik" name="hasilpemeriksaanfisik"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Hasil Pemeriksaan Penunjang</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Hasil Pemeriksaan Penunjang" name="hasilpemeriksaanpenunjang"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Diagnosis Akhir</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Diagnosis Akhir" name="diagnosisakhir"></textarea>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Pengobatan dan Tindakan</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Pengobatan dan Tindakan" name="pengobatantindakan"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Tindak Lanjut</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" placeholder="Tindak Lanjut" name="tindaklanjut"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Dokter</label>
                                <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="Dokter" name="dokter">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body --> 
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                    </div>
                    <!-- /.card-footer -->
                  </form>
              </div>
              <!-- /.card-body -->
            </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
 <%- include ../parts/footer.ejs %>
 <%- include ../parts/js.ejs %>